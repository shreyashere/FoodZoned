<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="15dp"
        android:hint="Name (Min. 3 characters)"
        android:drawableLeft="@drawable/ic_person"
        android:padding="10dp"
        android:drawablePadding="4dp"
        android:inputType="text"
        android:fontFamily="monospace"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etName"
        android:layout_marginHorizontal="15dp"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_email"
        android:padding="10dp"
        android:drawablePadding="4dp"
        android:inputType="textEmailAddress"
        android:fontFamily="monospace"/>

    <EditText
        android:id="@+id/etMobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etEmail"
        android:layout_marginHorizontal="15dp"
        android:hint="Mobile Number"
        android:drawableLeft="@drawable/ic_mobile_no"
        android:padding="10dp"
        android:drawablePadding="4dp"
        android:inputType="phone"
        android:maxLength="10"
        android:fontFamily="monospace"/>

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etMobileNo"
        android:layout_marginHorizontal="15dp"
        android:hint="Delivery Address"
        android:drawableLeft="@drawable/ic_address"
        android:padding="10dp"
        android:drawablePadding="4dp"
        android:inputType="text"
        android:fontFamily="monospace"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etAddress"
        android:layout_marginHorizontal="15dp"
        android:hint="Password (Min. 4 characters)"
        android:drawableLeft="@drawable/ic_password"
        android:padding="10dp"
        android:drawablePadding="4dp"
        android:inputType="textPassword"
        android:fontFamily="monospace"/>

    <EditText
        android:id="@+id/etConfPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etPassword"
        android:layout_marginHorizontal="15dp"
        android:hint="Confirm Password"
        android:drawableLeft="@drawable/ic_password"
        android:padding="10dp"
        android:drawablePadding="4dp"
        android:inputType="textPassword"
        android:fontFamily="monospace"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textAllCaps="false"
        android:layout_below="@id/etConfPassword"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="15dp"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textStyle="bold"/>

</RelativeLayout>
